@model IEnumerable<DellChallenge.D2.Web.Models.ProductModel>

@{
    ViewData["Title"] = "View";
}
<h4>All Products</h4>
<hr />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-4">
            @item.Name - @item.Category - <a href="/product/update/@item.Id">update</a> - <a href="/product/delete/@item.Id" onclick="return confirm('are you sure?')">delete</a>
        </div>
    </div>
}